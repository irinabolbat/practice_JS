function writeWords (str, num){
    let arr = [];
    let wordsArr = str.split(" ");
    for(let i =0; i < wordsArr.length; i++) {
        if(wordsArr[i].length > num){ 
            arr.push(wordsArr[i]);
        }
    }
    return arr;
}

console.log(writeWords('Над городом облака, коридоры, берега, проспект, река.', 7));
