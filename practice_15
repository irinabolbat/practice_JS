let arr1 = [0, 1, 2, 3, 4, 5, 6];
let arr2 = [-0, 1, 2, -3, 4, 5, -6];
let arr3 = [0, 1, 2, 3, 4, 5, 16];
let arr4 = [16];
let arr5 = [];


function getNum (arr) {
    if(arr.length == 0 || arr.length == 1){
        console.log(0);
    } else {
        let max = Math.max.apply(Math, arr);
        let min = Math.min.apply(Math, arr);
        let result = max - min;
        console.log(result);
    }
}

getNum(arr5);
